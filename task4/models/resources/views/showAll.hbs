{{>header}}
{{>nav}}

<section class="container">
    <table class="table table-bordered">
        <thead>
            <th>ID</th>
            <th>NAME</th>
            <th>AccNum</th>
            <th>intialBalance</th>
            <th>remainBalance</th>
            <th>ACTIONS</th>
        </thead>
        <tbody>

            {{#if isEmpty}}
            <tr class="alert alert-danger">
                <td colspan="12" class="text-center">No Customers yet</td>
            </tr>
            {{else}}
            {{#each customers}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.accNum}}</td>
                <td>{{this.intialBalance}}</td>
                <td>{{this.remainBalance}}</td>
                <td>
                     <a href="/show/{{this.accNum}}" class="btn btn-primary mx-2">Show</a>
                    <a href="/edit/{{this.accNum}}" class="btn btn-warning mx-2">Edit</a>
                    <a href="/delete/{{this.accNum}}" class="btn btn-danger mx-2">Delete</a>
                <a href="/addoperation/{{this.accNum}}" class="btn btn-info mx-2">Add Operation</a>
                </td>
            </tr>
            {{/each}}
            {{/if}}



        </tbody>

    </table>
</section>

{{>footer}}
